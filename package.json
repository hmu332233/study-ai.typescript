{
  "name": "ts-classroom",
  "version": "1.0.0",
  "description": "TypeScript 학습 프로젝트",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lesson:01": "pnpm exec ts-node --esm lessons/01-basics-and-primitives/exercise.ts",
    "lesson:02": "pnpm exec ts-node --esm lessons/02-structural-typing/exercise.ts",
    "lesson:03": "pnpm exec ts-node --esm lessons/03-generics-and-manipulation/exercise.ts",
    "lesson:04": "pnpm exec ts-node --esm lessons/04-ecosystem-and-advanced/exercise.ts",
    "check:01": "pnpm exec tsc --noEmit lessons/01-basics-and-primitives/exercise.ts",
    "check:02": "pnpm exec tsc --noEmit lessons/02-structural-typing/exercise.ts",
    "check:03": "pnpm exec tsc --noEmit lessons/03-generics-and-manipulation/exercise.ts",
    "check:04": "pnpm exec tsc --noEmit lessons/04-ecosystem-and-advanced/exercise.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2"
  }
}
